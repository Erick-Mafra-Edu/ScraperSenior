FROM python:3.11-slim

LABEL maintainer="Senior Systems"
LABEL description="MCP Server for Senior Documentation Search - Compatible with Docker and Podman"
LABEL version="1.0.0"

# Set working directory
WORKDIR /app

# Set environment variables for better compatibility
ENV PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1 \
    PIP_NO_CACHE_DIR=1

# Install system dependencies (compatible with both Docker and Podman)
RUN apt-get update && apt-get install -y --no-install-recommends \
    curl \
    ca-certificates \
    && rm -rf /var/lib/apt/lists/* /tmp/* /var/tmp/*

# Copy requirements first for better caching
COPY requirements.txt .

# Install Python dependencies with upgrade for security
RUN pip install --upgrade pip setuptools wheel && \
    pip install --no-cache-dir -r requirements.txt

# Copy application code (minimal and efficient)
COPY --chown=1000:1000 src/ ./src/
COPY --chown=1000:1000 mcp_config.json .
COPY --chown=1000:1000 docs_indexacao_detailed.jsonl .
COPY --chown=1000:1000 .env.example .env

# Create a non-root user for security (UID 1000 is standard across systems)
RUN useradd -m -u 1000 -g 0 appuser && \
    chown -R 1000:0 /app && \
    chmod -R u+rw /app

USER appuser:root

# Health check (compatible with both Docker and Podman)
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:8000/health || exit 1

# Expose port
EXPOSE 8000

# Default command - run MCP Server
CMD ["python", "-u", "src/mcp_server_docker.py"]
